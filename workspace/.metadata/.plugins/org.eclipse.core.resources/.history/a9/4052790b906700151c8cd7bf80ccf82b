	public String[] tamañoTxt(){
		
		String[] datos=null;
		String texto= leerTxt("");
		datos=texto.split("/*\n");
		
		for (int i = 0; i < datos.length; i++) {
			System.out.println(datos[i]);
		}
		
		
		return datos;
		
	}
	
	 

	
}
